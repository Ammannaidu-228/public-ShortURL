<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("./refs/head") %>
    <title>Home Page</title>
</head>
<body>
    <%- include("./refs/nav") %>
    <h1>Short Url Generator</h1>
    <div>
        <form method="post" action="/url">
            <label>Enter Your Origonal Url: </label>
            <input type="text" name="url" placeholder="https://wwww.example.com">
            <input class="btn btn-primary" type="submit" value="Submit"></button>
        </form>
    </div>

    <% if (locals.id) { %>
        <p> Generated url: http://localhost:8002/url/<%=id %></p>
     
    <% } %> <br/><br/>
    <div class="table">
        <% if (locals.urls) { %>
            <table class="table table-success table-striped">
                <thead>
                    <th> S. NO </th>
                    <th> ShortId </th>
                    <th> Original Url </th>
                    <th> Visits </th>
                </thead>
                <tbody>
                    <% urls.forEach((url, index)=> { %>
                        <tr>
                        <td> <%= index+1 %></td>
                        <td> <%= url.shortId %></td>
                        <td> <%= url.redirectURL %></td>
                        <td> <%= url.visitHistory.length %></td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
         
        <% } %>
    </div>
    <%- include("./refs/scripts") %>
</body>
</html>